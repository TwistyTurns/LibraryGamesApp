<UserControl x:Class="LibraryGamesApp.UserControls_Folder.BookReplacingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryGamesApp.UserControls_Folder"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="700" Loaded="UserControl_Loaded">
    <Grid>
        <Canvas x:Name="CanvasBook" Background="NavajoWhite"/>

        <Border Background="DimGray" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
            <Button x:Name="btnSubmit" Content="Complete" Width="200" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnSubmit_Click" FontSize="20"/>
        </Border>

        <Label x:Name="timerLabel" Content="Time:00:00" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="18" Foreground="White"/>
    </Grid>
</UserControl>
