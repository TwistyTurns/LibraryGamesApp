<UserControl x:Class="LibraryGamesApp.UserControls_Folder.MainMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryGamesApp.UserControls_Folder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

        
        <Image Source="/Resources/readingManga.png" Stretch="UniformToFill"/>
        
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Start_Click" Width="200" Height="45" Margin="50,50,0,0" FontSize="24"/>
        <Button x:Name="Options" Content="Options" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="45" Margin="50,120,0,0" FontSize="24"/>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="45" Margin="50,190,0,0" FontSize="24" FontFamily="minecraft enchantment" Click="Exit_Click"/>

    </Grid>
</UserControl>
