<UserControl x:Class="LibraryGamesApp.UserControls_Folder.FindingCallsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryGamesApp.UserControls_Folder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid x:Name="FindingCallsControlBruh">
        <Canvas x:Name="CanvasBook" Background="White"/>

        <TextBox x:Name="txtDescription" Text="Centered TextBox" HorizontalAlignment="Center" VerticalAlignment="Top"
                 FontSize="24" Padding="10" Margin="0,20,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,150,0,0">
            <!-- First set of buttons -->
            <StackPanel Margin="10">
                <Button x:Name="btn1" Content="Button 1A" FontSize="20" Padding="8" />
                <Button x:Name="btn2" Content="Button 1B" FontSize="20" Padding="8" />
                <Button x:Name="btn3" Content="Button 1C" FontSize="20" Padding="8" />
                <Button x:Name="btn4" Content="Button 1D" FontSize="20" Padding="8" />
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
