<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryGamesApp"
        xmlns:UserControls_Folder="clr-namespace:LibraryGamesApp.UserControls_Folder" x:Class="LibraryGamesApp.MainWindow"
        mc:Ignorable="d"
        Title="Cool Library Games" Height="500" Width="750" ResizeMode="NoResize">
    <Grid>

        
        <Grid>
            <TabControl x:Name="tabControlMian" SelectionChanged="tabControlMian_SelectionChanged">
                <TabItem Header="Home">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Game Select">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Options">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Exit">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>
        <ContentControl x:Name="contentControl" Height="400" Width="700" Panel.ZIndex="1"/>
    </Grid>
</Window>
